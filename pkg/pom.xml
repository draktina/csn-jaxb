<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.cwatch</groupId>
        <artifactId>csn-jaxb</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>
    <artifactId>csn-jaxb-pkg</artifactId>


    <dependencies>
        <dependency>
            <groupId>org.cwatch</groupId>
            <artifactId>csn-jaxb-gml</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.cwatch</groupId>
            <artifactId>csn-jaxb-ows</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.jvnet.ogc</groupId>
            <artifactId>gml-v_3_1_1-schema</artifactId>
            <version>1.1.0</version>
        </dependency>

        <dependency>
            <groupId>org.jvnet.ogc</groupId>
            <artifactId>ows-v_1_1_0-schema</artifactId>
            <version>1.1.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <schemaIncludes>
                                <include>schemas/csndc/1_3_4/csndc_pkg.xsd</include>
                            </schemaIncludes>
                            <bindingIncludes>
                                <include>binding.xjb</include>
                            </bindingIncludes>
                            <episodes>
                                <episode>
                                    <groupId>org.cwatch</groupId>
                                    <artifactId>csn-jaxb-gml</artifactId>
                                </episode>
                                <episode>
                                    <groupId>org.cwatch</groupId>
                                    <artifactId>csn-jaxb-ows</artifactId>
                                </episode>
                            </episodes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>